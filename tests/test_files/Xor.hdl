/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a, out=notA);
    Not(in=b, out=notB);
    Or(a=a, b=b, out=eq1);
    Or(a=notA, b=notB, out=eq2);
    And(a=eq1, b=eq2, out=out);
}